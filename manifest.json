{
    "manifest_version": 2,
    "name": "I Love Cookie",
    "version": "3.0",
    "description": "Cookies is good!",
    "permissions":[
        "contextMenus",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],
    "background":{
        "scripts":["eventPage.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon01.png",
        "default_popup": "popup.html"
    },
    "devtools_page": "devtools.html",
    "options_page": "options.html",
    "icons": {
        "128": "icon01.png",
        "48": "icon02.png",
        "16": "icon03.png"
      }
}